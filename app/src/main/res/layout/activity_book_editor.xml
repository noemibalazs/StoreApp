<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.example.android.storeapp.BookEditorActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/overview"
            android:text="@string/overview"
            android:paddingTop="16dp"
            android:textColor="#795548"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:paddingLeft="40dp"
            android:layout_height="wrap_content">

            <EditText
                android:hint="Book Name"
                android:id="@+id/book_name"
                android:inputType="textCapWords"
                android:textColor="#9e9e9e"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:hint="Author"
                android:inputType="textCapWords"
                android:id="@+id/book_author"
                android:textColor="#9e9e9e"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <EditText
                android:id="@+id/book_price"
                android:hint="Price"
                android:textColor="#9e9e9e"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <EditText
                android:id="@+id/book_quantity"
                android:hint="Quantity"
                android:textColor="#9e9e9e"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/supplier"
            android:text="@string/supplier_info"
            android:paddingTop="16dp"
            android:textColor="#795548"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:paddingLeft="17dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/sup_name"
                android:inputType="textCapWords"
                android:hint="Supplier name"
                android:textColor="#9e9e9e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/sup_email"
                android:hint="Email address"
                android:textColor="#9e9e9e"
                android:inputType="textEmailAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/sup_phone"
                android:hint="Phone number"
                android:inputType="phone"
                android:textColor="#9e9e9e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/image_settings"
            android:text="@string/image"
            android:paddingTop="16dp"
            android:textColor="#795548"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:paddingTop="16dp"
            android:paddingLeft="40dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

           <Spinner
               android:id="@+id/image_spinner"
               android:spinnerMode="dropdown"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>



        </LinearLayout>

    </LinearLayout>



</LinearLayout>
