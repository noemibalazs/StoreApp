<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/adapter_name"
        android:text="@string/adapter_name"
        android:textColor="#795548"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/adapter_author"
        android:text="@string/adapter_author"
        android:layout_marginTop="10dp"
        android:layout_below="@id/adapter_name"
        android:textColor="#795548"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_below="@id/adapter_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/adapter_quantity"
            android:text="@string/adapter_quantity"
            android:textColor="#795548"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/adapter_number"
            android:text="1"
            android:textColor="#795548"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/adapter_image"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:scaleType="centerCrop"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/b_a" />



        <TextView
            android:layout_marginLeft="25dp"
            android:text="@string/sell"
            android:textStyle="bold"
            android:textColor="#795548"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </LinearLayout>



</RelativeLayout>